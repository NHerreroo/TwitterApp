<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Style for circular profile images -->
    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Style for rounded media images -->
    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <!-- Style for media buttons -->
    <style name="MediaButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/cockatiel_gray</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="backgroundTint">@color/dark_gray</item>
        <item name="rippleColor">@color/cockatiel_orange_20</item>
    </style>

</resources>

